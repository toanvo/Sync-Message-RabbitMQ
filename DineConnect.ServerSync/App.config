<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="RabbitMqSettings" type="DineConnect.Common.RabbitMqSettings, DineConnect.Common" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
  <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 --></configSections>
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.LocalDbConnectionFactory, EntityFramework">
      <parameters>
        <parameter value="v13.0" />
      </parameters>
    </defaultConnectionFactory>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>
  
  <connectionStrings>
    <add name="TicketDataContext" connectionString="Data Source=.\SQLEXPRESS01;Initial Catalog=TicketDatabase;User ID=sa;Password=sa" providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <RabbitMqSettings host="localhost" port="5672" username="guest" password="guest" />
  
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <!--<target name="logfile" xsi:type="File" fileName="serverlog.txt" />
      <target name="console" xsi:type="Console" />-->
      <target name="database" xsi:type="Database">
        <connectionString>
          Data Source=.\SQLEXPRESS01;Initial Catalog=TicketDatabase;User ID=sa;Password=sa
        </connectionString>
        <commandText>
          insert into system_logging
          (log_date, log_level, log_logger, log_message, log_machine_name, log_user_name, log_call_site, log_thread, log_exception, log_stacktrace) 
          values 
          (@time_stamp, @level, @logger, @message, @machinename, @user_name, @call_site, @threadid, @log_exception, @stacktrace);
        </commandText>        
        <parameter name="@time_stamp" layout="${longdate}" />
        <parameter name="@level" layout="${level}" />
        <parameter name="@logger" layout="${logger}" />
        <parameter name="@message" layout="${message}" />
        <parameter name="@machinename" layout="${machinename}" />
        <parameter name="@user_name" layout="${windows-identity:domain=true}" />
        <parameter name="@call_site" layout="${callsite:filename=true}" />
        <parameter name="@threadid" layout="${threadid}" />
        <parameter name="@log_exception" layout="${exception}" />
        <parameter name="@stacktrace" layout="${stacktrace}" />
      </target>
    </targets>

    <rules>
      <logger name="*" minlevel="Trace" writeTo="File" />
      <logger name="*" minlevel="Info" writeTo="database" /> 
      <logger name="*" minlevel="Error" writeTo="database" />
    </rules>
  </nlog>
  <appSettings>
    <add key="ProcessingFolder" value="D:\Project\TestFoldersServer\Processing" />
    <add key="ProcessedFolder" value="D:\Project\TestFoldersServer\Processed" />
    <add key="FileWatcher" value="D:\Project\TestFoldersServer" />
    <add key="PatternFile" value="*.*" />
    <add key="SubcriptionId" value="ServerReceiving" />
    <add key="TopicMessagePattern" value="POS" />
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>